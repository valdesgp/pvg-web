            <div id="imageGrid" class="grid grid-cols-2 gap-2">

              <!-- Thumbnail Image 2 -->
              <div class="list-none">
                <img class="w-full h-60 object-cover" src="<%= projects[i].images.thumb2 %>" loading="lazy" alt="">
              </div>

              <!-- Thumbnail Image 3 -->
              <div class="list-none">
                <img class="w-full h-60 object-cover" src="<%= projects[i].images.thumb3 %>" loading="lazy" alt="">
              </div>

              <!-- Thumbnail Image 4 -->
              <div class="list-none">
