<!-- Main Navigation Wrapper -->
<nav>
  <div class="container">
    <div class="row">

      <!-- Loop through first 11 project items -->
      <% for (var i = 0; i < 11; i++) { %>

        <!-- Image Table for Each Project -->
        <table class="rounded-xl w-full text-sm text-left">
          <tr class="font-semibold grid grid-cols-1 list-inside">

            <!-- Image Grid for Project Thumbnails -->
            <div id="imageGrid" class="grid grid-cols-2 mt-3 mb-28 gap-3 auto-rows-auto grid-flow-row-dense">

              <% for (var key in projects[i].gallery) { %>
                <% const img = projects[i].gallery[key]; %>
                <% if (img && img.link) { %>
                  <div class="list-none break-inside-avoid rounded-xl border-2 border-gray-500 border-opacity-25 p-2">
                    <!-- Image -->
                    <div class="overflow-hidden rounded-xl">
                      <img
                        class="w-full object-cover transition-transform duration-200 hover:scale-105"
                        src="<%= img.link %>"
                        loading="lazy"
                        alt=""
                      />
                    </div>

                    <!-- Project name (left) and date (right) -->
                    <% if (img.project || img.date) { %>
                      <div class="mt-1 flex justify-between font-light text-2xl leading-tight">
                        <span><%= img.project || '' %></span>
                        <span><%= img.date || '' %></span>
                      </div>
                    <% } %>
                  </div>
                <% } %>
              <% } %>

            </div> <!-- End of Image Grid -->

          </tr>
        </table>

      <% } %> <!-- End of Project Loop -->

    </div>
  </div>
</nav>
