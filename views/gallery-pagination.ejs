              </div>

              <!-- Thumbnail Image 5 -->
              <div class="list-none">
                <img class="w-full h-60 object-cover" src="<%= projects[i].images.thumb5 %>" loading="lazy" alt="">
              </div>

              <!-- Thumbnail Image 6 -->
              <div class="list-none">
                <img class="w-full h-60 object-cover" src="<%= projects[i].images.thumb6 %>" loading="lazy" alt="">
              </div>

              <!-- Thumbnail Image 7 -->
              <div class="list-none">
                <img class="w-full h-60 object-cover" src="<%= projects[i].images.thumb7 %>" loading="lazy" alt="">
              </div>

            </div> <!-- End of Image Grid -->

          </tr>
        </table>

      <% } %> <!-- End of Project Loop -->

    </div>
  </div>
</nav>

<!-- JavaScript Function to Toggle Image Grid Visibility -->
<script>
  function toggleMinimize() {
    const grid = document.getElementById('imageGrid');
    const toggleButton = document.getElementById('toggleButton');

    if (grid.style.display === "none") {
      grid.style.display = "grid"; // Show the grid
      toggleButton.innerHTML = "Image Gallery v"; // Update button text
    } else {
      grid.style.display = "none"; // Hide the grid
      toggleButton.innerHTML = "Image Gallery >"; // Update button text
    }
  }
</script>
