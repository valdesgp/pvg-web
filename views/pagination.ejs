
<nav>
    <div class="container">
        <div class="row">
            <% for (var i = 0; i < faces.length; i++) { %>
                <a href="/heroes/<%= faces[i]._id %>">
                <table class="rounded-xl w-full text-sm text-left mb-2">
                    <tr class="font-semibold grid grid-cols-1 list-inside">
                        <th class="content flex">
                            <a class="font-semibold text-2xl my-auto ml-2 mb-2 text-blue-600 whitespace-nowrap w-full" href="/heroes/<%= faces[i]._id %>"><u><%= faces[i].name %></u> </a>
                            <div class="flex mr-1 items-center">
                                <div class="flex items-center px-1 leading-none py-1 text-blue-600 bg-blue-100 rounded-l-md">
                                  <span class="self-center text-sm font-medium">Position</span>
                            </div>
                                <div style="background-color: <%= faces[i].biography.poscolor %>" class="px-1 text-sm font-semibold leading-none py-1 bg-blue-600 text-blue-100 rounded-r-md pr-1">  <%= faces[i].biography.position %> </div>
                                <div class="ml-3 px-1 text-sm font-semibold bg-blue-600 text-blue-100 rounded-md whitespace-no-wrap"> <%= faces[i].facetype %> </div>
                        </th>
                        <th>
                        <!-- Appearance -->
                        <ul class="grid grid-cols-2 gap-0 font-normal mb-2 ml-1">
                            <li>
                                <a href="/heroes/<%= faces[i]._id %>">
                                <img class="rounded-md object-cover items-end" src="<%= faces[i].images.sm %>"   alt="superhero profile image">
                                </a>
                            </li>
                            <li class="ml-3 lg:-ml-16 text-lg">
                                <p> <b><%= faces[i].biography.fullName %></b> is a football player from <%= faces[i].biography.nationality %>, he plays as a <%= faces[i].biography.position %> for <%= faces[i].teams.club %> in the <%= faces[i].teams.league %>. <%= faces[i].teams.national %> national team.</p>
                                <p class="mt-3">  League: <span class="text-blue-600"> <%= faces[i].teams.league %></span></p>
                                <p>  Club: <span class="text-blue-600"> <%= faces[i].teams.club %></span></p>
                                <p>  National Team: <span class="text-blue-600"> <%= faces[i].teams.national %></span></p>
                            </li>
                        </ul>
                        </th>
                    </tr>
                </table>
                </a>
            <% } %>
        </div>

          <% if (pages > 0) { %>
            <nav class="pagination mt-10 text-center">
                <ul class="inline-flex items-center -space-x-px">
                    <% if (current == 1) { %>
                        <!--FIRST PAGE BUTTON-->
                        <li class="disabled"><a class="block px-3 py-2 ml-0 leading-tight text-gray-500 border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            First</a></li>
                    <% } else { %>
                        <li><a class="block px-3 py-2 ml-0 leading-tight text-gray-500 border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                             href="/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled px-3 py-2 leading-tight text-gray-500 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <!--ACTIVE PAGE-->
                            <li class="active px-2 py-2 leading-tight text-gray-500 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                                <a><%= i %></a></li>
                        <% } else { %>
                            <!--REST OF BUTTONS-->
                            <li><a class="px-2 py-2 leading-tight text-gray-500 border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" 
                                href="/<%= i %>"><%= i %></a></ti>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled px-3 py-2 leading-tight text-gray-500  border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <!--LAST PAGE-->
                        <li class="disabled px-3 py-2 leading-tight text-gray-500  border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <a>Last</a></li>
                    <% } else { %>
                        <li><a class="block px-3 py-2 leading-tight text-gray-500  border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" 
                            href="/<%= pages %>">Last</a></li>
                    <% } %>
                    </ul>
            </nav>
                <% } %>
    </div>
</nav>
