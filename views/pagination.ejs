            <nav class="pagination mt-10 text-center">
                <ul class="inline-flex items-center -space-x-px">
                    <% if (current == 1) { %>
                        <!--FIRST PAGE BUTTON-->
                        <p class="disabled"><a class="block px-3 py-2 ml-0 leading-tight text-gray-500 border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
